doctype html
html(lang='en')
  head
    title Todo!
    link(type="text/css" rel='stylesheet' href='/reset.css')
    link(type="text/css" rel='stylesheet' href='/lg_todo.css')
    link(href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet")
    script(src="https://code.jquery.com/jquery-3.1.0.js" integrity="sha256-slogkvB1K3VOkzAI8QITxV3VzpOnkeNVsKvtkYLMjfk=" crossorigin="anonymous")
    script(src="/lg_todo.js")


  body

  header
    form.new-todo-form(method="post" action="/todos")
      input.new-todo-form-input(
        type="text"
        name="description"
        placeholder="enter task"
      )
      button.new-todo-form-button(type="submit")
        svg(version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 16 16" style="enable-background:new 0 0 16 16;" xml:space="preserve")
          g
            path(class="fill" d="M16,8c0,0.5-0.5,1-1,1H9v6c0,0.5-0.5,1-1,1s-1-0.5-1-1V9H1C0.5,9,0,8.5,0,8s0.5-1,1-1h6V1c0-0.5,0.5-1,1-1s1,0.5,1,1v6h6C15.5,7,16,7.5,16,8z")

  main
    h1.welcome-header Welcome Back #{username}

    ul.todos.incomplete-todos
      for todo in incompleteTodos
        li
          span= todo.description
          a(href="/todos/"+todo.id+"/complete" class="complete")
 
    hr(class="thing")

    ul.todos.complete-todos
      for todo in completeTodos
        li
          span= todo.description
          a(href="/todos/"+todo.id+"/uncomplete" class="uncomplete")
          a(href="/todos/"+todo.id+"/delete" class="delete")
  footer
    h1(class = "footerH") Handle it
    p(class = "footerP") By Thomas W. Smith



